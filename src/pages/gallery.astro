---
import Layout from '../layouts/Layout.astro';
import { readdir } from 'fs/promises';
import { join } from 'path';

// Get list of gallery images from images directory
const imagesDir = join(process.cwd(), 'public/images');
let galleryImages: string[] = [];

try {
  const folders = await readdir(imagesDir);
  // Filter folders that contain origami.jpg
  for (const folder of folders) {
    const folderPath = join(imagesDir, folder);
    try {
      const files = await readdir(folderPath);
      if (files.includes('origami.jpg')) {
        galleryImages.push(folder);
      }
    } catch (error) {
      // Skip if not a directory or can't read
    }
  }
  galleryImages.sort();
} catch (error) {
  console.log('Images directory not found or empty');
}

// Gallery page for displaying origami works
---

<Layout title="Gallery - Paper After Word" currentPage="gallery">

    <div class="back">
      <a href="/">← トップに戻る</a>
    </div>

    <div class="page-header">
      <h1>Gallery</h1>
      <p>折り紙作品のギャラリー</p>
    </div>

    <main class="content">
      {galleryImages.length > 0 ? (
        <div class="gallery-grid">
          {galleryImages.map((id) => (
            <div class="gallery-item">
              <img src={`/images/${id}/origami.jpg`} alt={`折り紙作品 ${id}`} />
              <p class="gallery-caption">作品 {id}</p>
            </div>
          ))}
        </div>
      ) : (
        <div class="coming-soon">
          <h2>準備中</h2>
          <p>折り紙作品のギャラリーは準備中です。<br>近日中に公開予定です。</p>
        </div>
      )}
    </main>
  </Layout>
